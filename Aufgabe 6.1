class Pferd:
    def __init__(self, groesse, geschwindigkeit, hoechstgeschwindigkeit, name, alter):
        self.groesse = groesse
        self.geschwindigkeit = geschwindigkeit
        self.hoechstgeschwindigkeit = hoechstgeschwindigkeit
        self.name = name
        self.alter = int(alter)
        
    def laufen(self):
        print("Das Pferd läuft mit einer Geschwindigkeit von", self.geschwindigkeit, "km/h")
        print("Das Pferd hat eine Höchstgeschwindigkeit von", self.hoechstgeschwindigkeit, "km/h")
        print("Das Pferd ist", self.groesse, "cm groß")
        print("Das Pferd hat den Namen ", self.name)
    
    def sich_vorstellen(self):
        print("Hallo, ich bin", self.name)
        print("Ich bin", self.groesse, "cm groß")
        print("Meine Höchstgeschwindigkeit beträgt", self.hoechstgeschwindigkeit, "km/h")
        print("Meine Geschwindigkeit beträgt", self.geschwindigkeit, "km/h")

    def rechnen(self):
        print("Vor ", self.alter // 2, "Jahren war ich halb so alt wie ich jetzt bin")
    
